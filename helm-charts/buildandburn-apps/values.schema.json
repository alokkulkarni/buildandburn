{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["springbootBackend", "nginxFrontend"],
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "domain": {
          "type": "string"
        }
      }
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "infrastructure": {
      "type": "object",
      "properties": {
        "database": {
          "type": "object"
        },
        "rabbitmq": {
          "type": "object"
        }
      }
    },
    "springbootBackend": {
      "type": "object"
    },
    "nginxFrontend": {
      "type": "object"
    },
    "springboot-backend": {
      "type": "object"
    },
    "nginx-frontend": {
      "type": "object"
    }
  }
} 